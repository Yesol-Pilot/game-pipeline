{
    "template_name": "클리커 게임",
    "template_type": "clicker",
    "version": "1.0.0",
    "godot_version": "4.2",
    "description": "화면을 터치하여 자원을 모으고 업그레이드하는 클리커/태퍼 게임",
    "parameters": {
        "base_click_value": 1,
        "upgrade_cost_multiplier": 1.5,
        "auto_click_interval": 1.0,
        "prestige_threshold": 1000000
    },
    "core_loop": [
        "플레이어가 화면 터치",
        "자원(코인) 획득",
        "업그레이드 구매",
        "자동 수집 해금",
        "프레스티지로 리셋"
    ],
    "mechanics": [
        "화면 터치로 자원 획득",
        "업그레이드 구매",
        "자동 클리커 해금",
        "프레스티지 시스템"
    ],
    "assets_required": [
        {
            "asset_id": "main_button",
            "asset_type": "sprite",
            "path": "assets/sprites/main_button.png",
            "description": "메인 클릭 버튼"
        },
        {
            "asset_id": "coin_sprite",
            "asset_type": "sprite",
            "path": "assets/sprites/coin_sprite.png",
            "description": "코인 스프라이트"
        },
        {
            "asset_id": "background",
            "asset_type": "sprite",
            "path": "assets/sprites/background.png",
            "description": "배경 이미지"
        },
        {
            "asset_id": "click_sfx",
            "asset_type": "audio",
            "path": "assets/audio/click_sfx.ogg",
            "description": "클릭 효과음"
        }
    ],
    "export_targets": [
        "android",
        "html5"
    ]
}